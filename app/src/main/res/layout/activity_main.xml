<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context="com.example.android.footballscorekeeper.FootballScoreKeeper">

    /** 1st outer nested horizontal layout - top column **/

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:context="com.example.android.footballscorekeeper.MainActivity">

        /** Oakland Raiders **/

        <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#bdbdbd"
            android:orientation="vertical"
            tools:context="com.example.android.footballscorekeeper.MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:background="#bdbdbd"
                android:fontFamily="sans-serif-medium"
                android:padding="14dp"
                android:text="Oakland Raiders"
                android:textColor="#212121"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/firstscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-light"
                android:padding="8dp"
                android:text="0"
                android:textColor="#212121"
                android:textSize="56sp" />

            <Button
                android:id="@+id/three_point_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:onClick="addThreeForTeamA"
                android:paddingHorizontal="24dp"
                android:text="Field Goal"
                android:textColor="#424242" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="#ffffff"
                android:onClick="addTwoForTeamB"
                android:paddingHorizontal="36dp"
                android:text="Safety"
                android:textColor="#424242" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:onClick="addTouchdownOakChar"
                android:paddingHorizontal="18dp"
                android:text="Touchdown"
                android:textColor="#424242" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:onClick="addOneForTeamA"
                android:paddingHorizontal="48dp"
                android:text="PAT"
                android:textColor="#424242" />

        </android.support.v7.widget.LinearLayoutCompat>

        /** Vertical Separation Line **/

        <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#424242"
            android:padding="1dp"
            tools:context="com.example.android.footballscorekeeper.MainActivity">

        </android.support.v7.widget.LinearLayoutCompat>

        /** L.A. Chargers **/

        <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0d47a1"
            android:orientation="vertical"
            tools:context="com.example.android.footballscorekeeper.MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:background="#0d47a1"
                android:fontFamily="sans-serif-medium"
                android:padding="14dp"
                android:text="L.A. Chargers"
                android:textColor="#fdd835"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/secondscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-light"
                android:padding="8dp"
                android:text="0"
                android:textColor="#fdd835"
                android:textSize="56sp" />

            <Button
                android:id="@+id/three_point_text_viewB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#1565c0"
                android:onClick="addThreeForTeamB"
                android:paddingHorizontal="24dp"
                android:text="Field Goal"
                android:textColor="#fdd835" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="#1565c0"
                android:onClick="addTwoForTeamA"
                android:paddingHorizontal="36dp"
                android:text="Safety"
                android:textColor="#fdd835" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#1565c0"
                android:onClick="addTouchdownLosAng"
                android:paddingHorizontal="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="Touchdown"
                android:textColor="#fdd835" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#1565c0"
                android:onClick="addOneForTeamB"
                android:paddingHorizontal="48dp"
                android:text="PAT"
                android:textColor="#fdd835" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    /** 2nd outer nested horizontal layout **/

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="#a1887f"
        android:onClick="resetBothScores"
        android:text="reset"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
